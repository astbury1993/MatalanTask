<p id="notice"><%= notice %></p>

<h1>Listing Useremails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @useremails.each do |useremail| %>
      <tr>
        <td><%= useremail.name %></td>
        <td><%= useremail.email %></td>
        <td><%= useremail.login %></td>
        <td><%= link_to 'Show', useremail %></td>
        <td><%= link_to 'Edit', edit_useremail_path(useremail) %></td>
        <td><%= link_to 'Destroy', useremail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

